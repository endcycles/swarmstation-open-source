{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "../core-dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "types": ["node"],
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["*.ts"],
  "exclude": ["*.js", "*.d.ts"]
}