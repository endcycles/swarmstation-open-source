{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": ".",
    "declaration": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["main.ts", "preload.ts"],
  "exclude": ["node_modules", "dist", "src"]
}